<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
  <name>plg_content_ext_tss</name>
  <author>ELLE</author>
  <creationDate>23.03.2015</creationDate>
  <copyright>20.08.2013 All rights reserved.</copyright>
  <license>GNU/GPL v.3 or later.</license>
  <authorEmail>seoelle@gmail.com</authorEmail>
  <authorUrl>joomext.ru</authorUrl>
  <version>1.3.0</version>
  <description>PLG_EXT_TSS_XML_DESCRIPTION</description>
  <files>
    <filename plugin="ext_tss">ext_tss.php</filename>
    <filename>index.html</filename>
  </files>
    <media destination="ext_tss" folder="media">
      <filename>index.html</filename>
      <folder>assets</folder>
    </media>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.plg_content_ext_tss.ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_content_ext_tss.sys.ini</language>
    <language tag="ru-RU">ru-RU/ru-RU.plg_content_ext_tss.ini</language>
    <language tag="ru-RU">ru-RU/ru-RU.plg_content_ext_tss.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="tabs" type="radio" class="btn-group btn-yesno" default="1" label="PLG_EXT_TSS_TABS" description="" >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="spoilers" type="radio" class="btn-group btn-yesno" default="1" label="PLG_EXT_TSS_SPOILERS" description="" >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="sliders" type="radio" class="btn-group btn-yesno" default="1" label="PLG_EXT_TSS_SLIDERS" description="" >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
        <field name="jquery" type="text" default="" label="PLG_EXT_TSS_JQUERY" description="PLG_EXT_TSS_JQUERY_DESC" size="30" /> 
      </fieldset>
      <fieldset name="tabs">
        <field name="tabs_title_class" type="text" default="" label="PLG_EXT_TSS_TABS_TITLE_CLASS" description="PLG_EXT_TSS_CLASS_DESC" size="30" />                                            
        <field name="tabs_content_class" type="text" default="" label="PLG_EXT_TSS_TABS_CONTENT_CLASS" description="PLG_EXT_TSS_CLASS_DESC" size="30" />                                            
        <field name="tabs_title_print_tag" type="list" class="" default="h3" label="PLG_EXT_TSS_TABS_TITLE_PRINT_TAG" description="" >
          <option value="h1">JH1</option>
          <option value="h2">JH2</option>
          <option value="h3">JH3</option>
          <option value="h4">JH4</option>
          <option value="h5">JH5</option>
          <option value="h6">JH6</option>
        </field>
      </fieldset>
      <fieldset name="sliders">
        <field name="sliders_title_class" type="text" default="" label="PLG_EXT_TSS_SLIDERS_TITLE_CLASS" description="PLG_EXT_TSS_CLASS_DESC" size="30" />                                            
        <field name="sliders_content_class" type="text" default="" label="PLG_EXT_TSS_SLIDERS_CONTENT_CLASS" description="PLG_EXT_TSS_CLASS_DESC" size="30" />                                            
        <field name="sliders_title_print_tag" type="list" class="" default="h3" label="PLG_EXT_TSS_SLIDERS_TITLE_PRINT_TAG" description="" >
          <option value="h1">JH1</option>
          <option value="h2">JH2</option>
          <option value="h3">JH3</option>
          <option value="h4">JH4</option>
          <option value="h5">JH5</option>
          <option value="h6">JH6</option>
        </field>
        <field name="sliders_nfa" type="radio" class="btn-group btn-yesno" default="0" label="PLG_EXT_TSS_SLIDERS_NO_FIRST_ACTIVE" description="" >
          <option value="1">JYES</option>
          <option value="0">JNO</option>
        </field>
      </fieldset>
      <fieldset name="spoilers">
        <field name="spoilers_title_class" type="text" default="" label="PLG_EXT_TSS_SPOILERS_TITLE_CLASS" description="PLG_EXT_TSS_CLASS_DESC" size="30" />                                            
        <field name="spoilers_content_class" type="text" default="" label="PLG_EXT_TSS_SPOILERS_CONTENT_CLASS" description="PLG_EXT_TSS_CLASS_DESC" size="30" />                                            
        <field name="spoilers_title_print_tag" type="list" class="" default="h3" label="PLG_EXT_TSS_SPOILERS_TITLE_PRINT_TAG" description="" >
          <option value="h1">JH1</option>
          <option value="h2">JH2</option>
          <option value="h3">JH3</option>
          <option value="h4">JH4</option>
          <option value="h5">JH5</option>
          <option value="h6">JH6</option>
        </field>
      </fieldset>
    </fields>
  </config>
</extension>
